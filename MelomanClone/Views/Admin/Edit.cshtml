@model MelomanClone.Models.Product

<h2>Edit Product</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label>Title</label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="mb-2">
        <label>Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-2">
        <label>Price</label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-2">
        <label>Image URL</label>
        <input class="form-control" asp-for="ImageUrl" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>

    <div class="mb-2">
        <label>Category</label>
        <select class="form-control" asp-for="CategoryId">
            @foreach (var c in ViewBag.Categories)
            {
                <option value="@c.Id" selected="@(c.Id == Model.CategoryId)">
                    @c.Name
                </option>
            }
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <button class="btn btn-primary mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
