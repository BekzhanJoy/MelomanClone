@model MelomanClone.Models.Cart

<h2>Shopping Cart</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Price ₸</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price* item.Quantity) ₸</td>
                    <td>
                        <a asp-action="Remove"
                           asp-route-id="@item.ProductId"
                           class="btn btn-danger btn-sm">
                            Remove
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total: <strong>@Model.Total() ₸</strong></h4>

    <a asp-action="Checkout" class="btn btn-success mt-3">
        Checkout
    </a>
}
